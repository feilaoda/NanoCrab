{
  "name": "nanocrab",
  "version": "0.1.0",
  "description": "Feishu + Codex CLI assistant (standalone)",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "watchdog": "node scripts/watchdog.mjs",
    "dev:watch": "vite-node --watch src/index.ts",
    "dev:tsx": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@larksuiteoapi/node-sdk": "^1.58.0",
    "@openai/codex-sdk": "latest",
    "better-sqlite3": "^11.8.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.0",
    "@types/ws": "^8.5.10",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vite": "^5.4.0",
    "vite-node": "^1.6.0"
  },
  "engines": {
    "node": ">=20"
  }
}
